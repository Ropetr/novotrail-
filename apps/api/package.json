{
  "name": "@trailsystem/api",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply novotraildesktop-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply novotraildesktop-db",
    "db:studio": "drizzle-kit studio",
    "seed": "node -e \"fetch('http://localhost:8787/seed',{method:'POST'}).then(r=>r.text()).then(console.log).catch(err=>{console.error(err);process.exit(1);})\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.0",
    "@trailsystem/types": "workspace:*",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.14",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "drizzle-kit": "^0.29.1",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.65.0"
  }
}
