{
  "name": "erp-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:backend": "pnpm --filter @erp/backend dev",
    "dev:frontend": "pnpm --filter @erp/frontend dev",
    "dev": "pnpm run dev:backend & pnpm run dev:frontend",
    "build:backend": "pnpm --filter @erp/backend deploy",
    "build:frontend": "pnpm --filter @erp/frontend build",
    "build": "pnpm run build:backend && pnpm run build:frontend",
    "test": "pnpm -r test",
    "type-check": "pnpm -r type-check",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "esbuild": "^0.27.3",
    "miniflare": "^4.20260219.0",
    "playwright": "^1.58.2",
    "typescript": "^5.7.3",
    "wrangler": "^4.65.0"
  }
}
